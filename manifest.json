{
    "name": "German Companies Scraper",
    "version": "1.0",
    "description": "Google Chrome extension that scrapes all the companies from the German chamber of commerce in China.",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo.png",
            "32": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        }
    },
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "manifest_version": 2
}